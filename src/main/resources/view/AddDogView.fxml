<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.paws.controller.AddDogController">

    <center>
        <VBox spacing="12.0" alignment="TOP_LEFT">
            <padding>
                <Insets top="16" right="20" bottom="16" left="20"/>
            </padding>

            <Label text="Add New Pet" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="100" />
                    <ColumnConstraints halignment="LEFT" hgrow="ALWAYS" />
                </columnConstraints>

                <!-- Row 0: Name -->
                <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="nameField" promptText="Pet name"
                           GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <!-- Row 1: Species -->
                <Label text="Species:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <ChoiceBox fx:id="speciesChoiceBox"
                           GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <!-- Row 2: Breed -->
                <Label text="Breed:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="breedField" promptText="Optional"
                           GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <!-- Row 3: Sex -->
                <Label text="Sex:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <ChoiceBox fx:id="sexChoiceBox"
                           GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <!-- Row 4: Date of Birth -->
                <Label text="Date of Birth:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <DatePicker fx:id="dobPicker"
                            GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                <!-- Row 5: Weight -->
                <Label text="Weight:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <HBox spacing="8" GridPane.rowIndex="5" GridPane.columnIndex="1">
                    <TextField fx:id="weightField" promptText="e.g. 25.0"/>
                    <ChoiceBox fx:id="weightUnitChoiceBox"/>
                </HBox>

                <!-- Row 6: Allergies -->
                <Label text="Allergies:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                <TextField fx:id="allergiesField" promptText="Comma separated"
                           GridPane.rowIndex="6" GridPane.columnIndex="1"/>

                <!-- Row 7: Medical history -->
                <Label text="Medical History:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
                <TextArea fx:id="medicalHistoryArea" prefRowCount="3"
                          promptText="Surgeries, chronic issues, etc."
                          GridPane.rowIndex="7" GridPane.columnIndex="1"/>

                <!-- Row 8: Notes -->
                <Label text="Notes:" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
                <TextArea fx:id="notesArea" prefRowCount="2"
                          GridPane.rowIndex="8" GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="10">
                <Button text="Save"
                        fx:id="saveButton"
                        onAction="#handleSavePet"/>
                <Button text="Cancel"
                        fx:id="cancelButton"
                        onAction="#handleCancel"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
